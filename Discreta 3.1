n = int(input("Informe o numero natural: "))
p = int(input("Informe o numero primo: "))
def ORDpn (primo, natural):
  fatores = []
  x = 1
  while (primo**x) < natural:
    fat = natural//(primo**x)
    fatores.append(fat)
    x += 1
  return sum(fatores)
